{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tournoi</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournoi.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ tournoi.nom }}</td>
            </tr>
            <tr>
                <th>Nomjeu</th>
                <td>{{ tournoi.nomJeu }}</td>
            </tr>
            <tr>
                <th>Nbrmax</th>
                <td>{{ tournoi.nbrMax }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if tournoi.datedebut %}{{ tournoi.datedebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if tournoi.datefin %}{{ tournoi.datefin|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tournoi_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tournoi_edit', { 'id': tournoi.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
