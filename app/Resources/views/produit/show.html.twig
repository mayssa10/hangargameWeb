                                </div>
                            </div>
                            <div>
                                <div>
                                    <a href="assets/images/product-4-green.png" class="nk-gallery-item" data-size="780x990"><img  name="{{ produit.id }}"  src="{{ asset('/uploads/Images/Stores/' ~ produit.imageName) }}" alt="">
                                    </a>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <a href="assets/images/product-4-orange.png" class="nk-gallery-item" data-size="780x990"><img  name="{{ produit.id }}"  src="{{ asset('/uploads/Images/Stores/' ~ produit.imageName) }}" alt="">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END: Product Photos Carousel -->
                </div>

                <div class="col-md-7">
                    <h2 class="nk-product-title">{{ produit.nom }}</h2>
                    <div class="nk-product-description">
                         <td> <strong>Description:  </strong><p>{{ produit.description }}</p></td>
                    </div>




                    <td><strong>Prix:</strong> &nbsp;&nbsp;</td>

                   <td> <span >{{ produit.prix }} Dt</span></td><div class="nk-gap-2"></div>

 <td> <strong>Date d'ajout:  </strong> {{ produit.date |date('d/m/Y') }}</td>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                   <td><strong>Likes:</strong> &nbsp;&nbsp;</td>
                  <td>
                  <span id="like{{ produit.id }}"  class="nk-action-heart">
                    <span class="num">{{ produit.likes }}</span>
                    <span class="like-icon ion-android-favorite-outline"></span>
                    <span class="liked-icon ion-android-favorite"></span>
                   </span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                      <span class="nk-forum-action-btn">
                          <a href="#forum-reply" class="nk-anchor">
                              <span class="fa fa-reply"></span> Commenter</a>
                      </span>
                   </td>
                    <div class="nk-gap-2">
                        </div>
      {% if(app.user.id == UserRec.id) %}
                    <div class="nk-gap-2">
                    <td class="nk-product-cart-remove "><a
                      href="{{ path('produit_delete',{'id':produit.id}) }}"> <span
                                                    class="ion-trash-b h5"><strong class="h5" >&nbsp; Supprimer</strong></span></a>
                                    </td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                       <td class="nk-product-cart-remove "><a
                                            href="{{ path('produit_edit',{'id':produit.id}) }}"> <span
                                                    class="ion-edit h5" > <strong class="h5" >&nbsp;Modifier</strong></span></a>
                                    </td>
                        </div>


{% endif %}

<script>$(document).ready(function () {
                $('#like{{ produit.id }}').click(function () {
                    var idp= {{ produit.id }};
                    var like = {{ produit.likes }};

                    var ajaxurl = 'show',
                        data = { 'like': like , 'idp':idp };
                    $.get(ajaxurl, data, function (response) {
                        console.log(response)
                        // Response div goes here.

                    });
                });
            });</script>


                </div>

