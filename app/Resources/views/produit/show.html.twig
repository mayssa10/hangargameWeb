                    <div class="nk-carousel-3" data-size="1">
                        <div class="nk-carousel-inner nk-popup-gallery">
                            <div>
                                <div>
                                    <a href="assets/images/product-4.png" class="nk-gallery-item" data-size="780x990"><img    name="{{ produit.id }}"
                                                    src="{{ asset('/uploads/Images/Stores/' ~ produit.imageName) }}" alt="">
