        <div class="nk-summernote" id="contenuTxt" >12</div>


    <script>
        function getT() {
            var node = document.getElementById('contenuTxt');
            var text = node.innerHTML;

           return text;
        }

        function setT() {
            document.getElementById("contenuh").setAttribute('value', getT());
            alert(getT());
        }
    </script>
    <input type="text" id="contenuh">

        <div class="nk-gap-1"></div>
       <button onclick="getT();setT();" type="submit" class="nk-btn nk-btn-lg link-effect-4" >Reply</button>

