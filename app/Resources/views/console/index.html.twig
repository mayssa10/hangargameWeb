{% extends is_granted('ROLE_ADMIN') ? "@Entity/indexBack.html.twig" : "@Entity/index2.html.twig" %}

{% block BodyBack %}

<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Liste des Consoles<small>Admin</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>

                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix" ></div>
            </div>
            <div class="navigation">

            </div>
            <div class="x_content">

                <table id="datatable" class="table table-striped table-bordered">

                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Date de sortie</th>
                        <th>Supp/modif</th>



                    </tr>
                    </thead>


                    <tbody>
                    {% for console in consoles %}
                        {% set lien = app.request.getBaseURL() ~ '/uploads/Images/Actualites/' ~ console.image %}
                        <tr>
                            <td>{{console.nom}}</td>
                            <td>{{ console.description }}</td>
                            <td>
                                <div class="product_gallery">
                                    <a href='{{lien}}'>
                                        <img   src="{{ lien }}" >
                                    </a>
                                </div>
                            </td>
                            <td>{{ console.dateSortie |date('Y/m/d') }}</td>


                            <td><a href='{{ path('console_delete',{'id': console.id}) }}' ><i class="fa fa-trash-o"></i></a>

                         &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;
                                <a href='{{ path('console_edit',{'id': console.id}) }}'><i class="fa fa-pencil"></i></a></td>


                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>
{% endblock %}
