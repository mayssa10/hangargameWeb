{% extends '@Entity/indexBack.html.twig' %}



{% block BodyBack %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Modification Console
                        <small>Admin</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-expanded="false"><i class="fa fa-wrench"></i></a>

                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    <br/>

                    {{ form_start(edit_form,{'attr':{'class':'form-horizontal form-label-left'}} ) }}

                    <div class="form-group">
                        <div class="nk-gap-2"></div>
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Nom console
                            <span class="required">*</span>
                        </label>


                        <div class="col-md-6 col-sm-6 col-xs-12">

                            {{ form_widget(edit_form.nom,{'attr':{'placeholder':'Nom console *' | trans }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="nk-gap-2"></div>
                        <br>

                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Description
                            <span class="required">*</span>
                        </label>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.description,{'attr':{'class':'class="col-md-12 col-sm-12 col-xs-12 form-group','placeholder':'Description Console*','type':'textarea' | trans }}) }}
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="nk-gap-2"></div>

                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Image
                            <span class="required">*</span>
                        </label>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.image,{'attr':{'placeholder':'image*' | trans }}) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="nk-gap-2"></div>

                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Date de sortie
                            <span class="required">*</span>
                        </label>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.dateSortie,{'attr':{'placeholder':'image*' | trans }}) }}

                        </div>
                    </div>


                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                            <button type="reset"  class="btn btn-primary">Cancel</button>

                            <button type="submit"  value="Edit" class="btn btn-success">Submit</button>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

    </div>
    </div>

    {{ form_end(edit_form) }}


{% endblock %}
